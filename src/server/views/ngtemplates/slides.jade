script(type="text/ng-template", id="slides.html")
  #slides.span8("data-ng-controller"="SlideCtrl as slide")
    .pagination
      ul
        li.previous
          a.fui-arrow-left(href="#")
        li("data-ng-repeat"="quizItem in slide.quizItems", "data-ng-class"="{ active: !$index }")
          a(href="#", "data-ng-bind"="$index")
        li.next
          a.fui-arrow-right(href="#")
